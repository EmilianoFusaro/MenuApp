<section id="mostra">
  <div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Profilo Utente: <%= @utente.name %></h1>
      <div class="row">
        <div class="col-md-12">
        <p id="notice"><strong><%= notice %></strong></p>
        <%#= form_for(@utente) do |f| %>
        <%= form_for @utente, :url => url_for(:controller => 'profiles', :action => 'aggiorna_utente') , :html => {:method => :put}  do |f| %>
        <%#= form_for @utente, :url => url_for(:controller => 'profiles', :action => 'aggiorna_utente') do |f| %>
          <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
              <tr>
                <th>Campo Utente</th>
                <th>Valore</th>
              </tr>
            </thead>
            <tr>
            <td>Utente Id:</td>
            <td><%= @utente.id %></td>
            <%= f.hidden_field :id %>
            </tr>
            <tr>
            <td>Email:</td>
            <td contenteditable="false"><%= f.text_field :email , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Nome:</td>
            <!-- <td contenteditable="false"><%#= f.text_field :name , class:"testo_enter"%></td> -->
            </tr>
            <tr>
            <td>Numero Di Accessi:</td>
            <td contenteditable="false"><%= f.text_field :sign_in_count , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Ultimo Accesso:</td>
            <td contenteditable="false"><%= f.date_field :current_sign_in_at %></td>
            </tr>
            <td>Penultimo Accesso:</td>
            <td contenteditable="false"><%= f.date_field :last_sign_in_at %></td>
            </tr>
            <td>Data Creazione:</td>
             <td contenteditable="false"><%= f.date_field :created_at %></td>
            </tr>
            <td>Data Aggiornamento:</td>
            <td contenteditable="false"><%= f.date_field :updated_at %></td>
            </tr>
          </table>
          <!-- <button type="button" class="btn btn-success">Salva Utente</button> -->
          <%= f.submit 'Salva Utente', :class => 'btn btn-success' %>
          <% end %>
          <hr>

          <%= form_for(@profile) do |f| %>
          <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
              <tr>
                <th>Campo Profilo</th>
                <th>Valore</th>
              </tr>
            </thead>
            <tr>
            <td>Profilo Id:</td>
            <td><%= @profile.id %></td>
            </tr>
            <tr>
            <td>User Id:</td>
            <td><%= @profile.user_id %></td>
            </tr>

            <tr>
            <td>Tipo:</td>
            <td contenteditable="false"><%= f.text_field :tipo , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Descrizione:</td>
            <td contenteditable="false"><%= f.text_field :descrizione , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Creato:</td>
            <td contenteditable="false"><%= f.date_field :created_at %></td>
            </tr>
            <tr>
            <td>Aggiornato:</td>
            <td contenteditable="false"><%= f.date_field :updated_at %></td>
            </tr>
            <tr>
            <td>Stampa Listino:</td>
            <td contenteditable="false"><%= f.check_box :stampalistino %></td>
            </tr>
            <tr>
            <td>Stampa Listino Valido:</td>
            <td contenteditable="false"><%= f.date_field :stampalistino_data%></td>
            </tr>
            <tr>
            <td>Lisino Web:</td>
            <td contenteditable="false"><%= f.check_box :weblistino%></td>
            </tr>
            <tr>
            <td>Listino Web Valido:</td>
            <td contenteditable="false"><%= f.date_field :weblistino_data %></td>
            </tr>
            <tr>
            <td>Ragione Sociale:</td>
            <td contenteditable="false"><%= f.text_field :ragionesociale , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Indirizzo:</td>
            <td contenteditable="false"><%= f.text_field :indirizzo , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Telefono:</td>
            <td contenteditable="false"><%= f.text_field :telefono , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Cellulare:</td>
            <td contenteditable="false"><%= f.text_field :cellulare , class:"testo_enter"%></td>
            </tr>
            <tr>
            <td>Fax:</td>
            <td contenteditable="false"><%= f.text_field :cellulare , class:"testo_enter"%></td>
            </tr>
            <td>Sito:</td>
            <td  contenteditable="false"><%= f.text_field :sitointernet , class:"testo_enter"%></td>
            </tr>
          </table>
          <!-- <button type="button" class="btn btn-success">Salva Profilo</button> -->
          <%#= f.submit "Salva Profilo" %>
          <%#= f.button :submit =>"Sala Profilo", class: "btn btn-success" , text:"ciao"%>
          <%= f.submit 'Salva Profilo', :class => 'btn btn-success' %>
          <% end %>
          <hr>

          <%#= link_to 'Edit', edit_profile_path(@profile) %>
          <strong><%= link_to '<--Back', profiles_path %></strong>
          <br><br><br>
        </div>
      </div>
    </div>
  </div>
  </div>

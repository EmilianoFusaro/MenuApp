<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <h1>Gestione Profili Utente</h1>
                <div class="row">
                  <div class="col-md-6">
                    <!--<div class="form-group">-->
                    <!-- <label for="name" class="sr-only">Filtro</label> -->
                    <%= form_tag({controller: "profiles", action: "cerca"}, method: "get") do %>
                    <input type="text" class="form-control pull-left" id="descrizione" name="descrizione" placeholder="Filtra Utente ..." style="width:300px;" maxlength="50">
                    <button type="submit" id="cerca_foto" class="btn btn-primary pull-left" style="width:150px;">Cerca</button>
                    <% end %>
                    <!--</div>-->
                  </div>
                  <br>
                  <br>
                  <br>
                  <br>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<section id="subscribe">
  <p id="notice"><%= notice %></p>
  <table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Tipo</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Descrizione</th>
        <th colspan="3">Azioni</th>
      </tr>
    </thead>
    <tbody>
    <% @profiles.each do |profile| %>
      <tr>
      <td><%= profile.user_id %></td>
      <td><%= profile.tipo %></td>
      <!-- <td><%#= User.find_by_id(profile.user_id).name.nil? %></td>  Non Funziona-->
      <% unless profile.user.nil? %>
      <td><%= profile.user.name %></td>
      <td><%= profile.user.email %></td>
      <% else %>
      <td> non assegnato</td>
      <td> non assegnato</td>
      <% end %>
      <td><%= profile.descrizione %></td>
      <td style="width:220px;">
      <%= link_to 'Mostra', profile ,class:"btn btn-primary btnrs" ,style:"width:65px;"%>
      <%= link_to 'Edita', edit_profile_path(profile) ,class:"btn btn-warning btnrs" ,style:"width:65px;"%>
      <%= link_to 'Elimina', profile, method: :delete, data: { confirm: 'Sei Sicuro Di Voler Eliminare Questo Utente?'} ,id:"elimina_#{profile.id}", class:"btn btn-danger btnrs" ,style:"width:65px;"%>
      </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="subscribe section-padding"></div>
</section>

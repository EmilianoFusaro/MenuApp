<section id="subscribe">
  <p id="notice"><%#= notice %></p> <!-- conferma di login -->
  <table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Descrizione</th>
        <th>Tipo</th>
        <th colspan="3">Azioni</th>
      </tr>
    </thead>
    <tbody>
    <% @templates.each do |template| %>
      <tr>
      <td><%= template.id %></td>
      <td><%= template.nome %></td>
      <td><%= template.descrizione %></td>
      <td><%= template.tipo %></td>
      <td style="width:170px;">
      <%= link_to 'Modifica', template ,class:"btn btn-primary btnrs" ,style:"width:75px;"%>
      <%= link_to 'Elimina', template, method: :delete, data: { confirm: 'Sei Sicuro Di Voler Eliminare Questo Template?'} ,id:"elimina_#{template.id}", class:"btn btn-danger btnrs" ,style:"width:75px;"%>
      </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="subscribe section-padding"></div>
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
</section>

<section id="registrazione">
  <div class="footer section-padding">
    <div class="container">
      <h1><strong>Registrazione Utente</strong></h1>
      <%= devise_error_messages! %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"form contact", id:"frm_contatti" }) do |f| %>
      <!-- <form action="/receives/registra" class="form contact" id="frm_contatti" method="post"> -->
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <div class="form-group">
              <label for="name" class="sr-only">Nome</label>
              <%= f.text_field :name, autofocus: true ,class:"form-control", placeholder:"Nome"%>
            </div> <!-- end .form-group -->

            <div class="form-group">
              <label for="email" class="sr-only">Email</label>
              <%= f.email_field :email, autofocus: true ,class:"form-control" , placeholder:"Email" %>
            </div> <!-- end .form-group -->

          </div> <!-- end .form> .row> .col-md-4 -->

          <div class="col-xs-12 col-md-6">
            <div class="form-group">
              <label for="name" class="sr-only">Password</label>
              <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password (8 caratteri minimo)" %>
            </div> <!-- end .form-group -->

            <div class="form-group">
              <label for="name" class="sr-only">Conferma Password</label>
              <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control", placeholder:"Conferma Password" %>
            </div> <!-- end .form-group -->
            </div>

        </div> <!-- end .form> .row -->
        <button class="btn btn-default contact-submit custom-btn" type="submit" id="btn_contatti"><i class="fa fa-hand-o-right"></i>REGISTRA</button>
        <!-- <%= f.submit "Sign up" %> -->

      <!-- </form>  -->
      <% end %>
    </div> <!-- end .container -->
  </div> <!-- end .footer -->
</section>



